{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "build": "tsc -p . && vite build",
    "strict": true,
    "jsx": "react-jsx", // Enable React JSX support
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
